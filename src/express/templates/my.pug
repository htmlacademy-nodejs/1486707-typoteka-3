extends layout.pug

block header-content
    include partials/header-author

block main-content
    main.main-page.main-page--padding
        section.main-page__notes.notes
            h1.notes__title Мои записи
            ul.notes__list
                each article, index in articles
                    if (index !== (articles.length - 1))
                        li.notes__list-item
                            time.notes__item-time(datetime=article.createdDate) #{article.createdDate}
                            a.notes__item-text(href='#') #{article.announce}
                            button.notes__button.button.button--close-item(type='button')
                                span.visually-hidden Закрыть строку списка
                    else
                        li.notes__list-item.notes__list-item--last
                            time.notes__item-time(datetime=article.createdDate) #{article.createdDate}
                            a.notes__item-text(href='#') #{article.announce}
                            button.notes__button.button.button--close-item(type='button')
                                span.visually-hidden Закрыть строку списка

